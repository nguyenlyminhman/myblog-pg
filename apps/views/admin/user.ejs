<%
function formatDate(date) {
  if (date == null)
  {
    return "";
  } else {
    var date = new Date(date);
    var d = date.getDate();
    var m = date.getMonth() + 1;
    if(d<10){
        d='0'+d;
    }
    if(m<10){
        m='0'+m;
    }
    var y = date.getFullYear();
    return y + '/' + m + '/' + d;
  }
}
%>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <%- include layout/head %>
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />

